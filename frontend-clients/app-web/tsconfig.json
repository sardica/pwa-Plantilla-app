{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true, /* <-- AÃ±adido para mejor interoperabilidad con JS */

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

     /* Path Aliases */
     "baseUrl": ".",
     "paths": {
       "@/*": [
         "./src/*"
       ]
     }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
